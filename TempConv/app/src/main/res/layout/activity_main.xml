<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="developer_lab.com.tempconv.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:textSize="@dimen/title"
        android:id="@+id/titleId"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextId"
        android:hint="@string/txt_hints"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/titleId"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c_title"
        android:id="@+id/button1Id"
        android:layout_marginLeft="23dp"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toStartOf="@+id/result" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f_title"
        android:id="@+id/button2"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/editTextId"
        android:layout_toEndOf="@+id/result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title"
        android:id="@+id/result"
        android:layout_marginBottom="89dp"
        android:text="@string/result"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
